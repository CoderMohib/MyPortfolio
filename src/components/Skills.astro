<section id="Skills" class="min-h-auto skills section animated">
  <div
    class="w-full max-w-[1000px] mx-auto px-[5%] py-8 skills-container animated-left"
  >
    <div class="section-header">
      <h1
        class="font-['Sora',sans-serif] text-[clamp(2.2rem,6vw,3.2rem)] font-extrabold tracking-[-1.5px] mb-8 text-center"
      >
        My <span class="text-primary">Skills</span>
      </h1>
    </div>
    <div
      class="grid grid-cols-[repeat(auto-fit,minmax(280px,1fr))] gap-8 mt-8 skills-grid"
    >
      <div
        class="bg-white/10 backdrop-blur-[10px] p-6 rounded-[15px] border border-white/20 skill-category"
      >
        <h3
          class="font-['Sora',sans-serif] font-bold mb-[1.2rem] text-primary text-[1.25rem]"
        >
          Frontend & UI
        </h3>
        <div class="flex flex-wrap gap-[0.8rem] skill-items">
          <span
            class="bg-white/10 px-4 py-2 rounded-[20px] text-[0.9rem] flex items-center gap-2 transition-all duration-300 border border-transparent hover:bg-primary/20 hover:border-primary hover:-translate-y-[3px] skill-badge"
            ><i class="text-[1.1rem] fa-solid fa-square-rss"></i> Next.js</span
          >
          <span
            class="bg-white/10 px-4 py-2 rounded-[20px] text-[0.9rem] flex items-center gap-2 transition-all duration-300 border border-transparent hover:bg-primary/20 hover:border-primary hover:-translate-y-[3px] skill-badge"
            ><i class="text-[1.1rem] fa-solid fa-rocket"></i> AstroJS</span
          >
          <span
            class="bg-white/10 px-4 py-2 rounded-[20px] text-[0.9rem] flex items-center gap-2 transition-all duration-300 border border-transparent hover:bg-primary/20 hover:border-primary hover:-translate-y-[3px] skill-badge"
            ><i class="text-[1.1rem] fa-brands fa-react"></i> React.js</span
          >
          <span
            class="bg-white/10 px-4 py-2 rounded-[20px] text-[0.9rem] flex items-center gap-2 transition-all duration-300 border border-transparent hover:bg-primary/20 hover:border-primary hover:-translate-y-[3px] skill-badge"
            ><i class="text-[1.1rem] fa-brands fa-bootstrap"></i> Bootstrap</span
          >
          <span
            class="bg-white/10 px-4 py-2 rounded-[20px] text-[0.9rem] flex items-center gap-2 transition-all duration-300 border border-transparent hover:bg-primary/20 hover:border-primary hover:-translate-y-[3px] skill-badge"
            ><i class="text-[1.1rem] fa-solid fa-palette"></i> Tailwind CSS</span
          >
          <span
            class="bg-white/10 px-4 py-2 rounded-[20px] text-[0.9rem] flex items-center gap-2 transition-all duration-300 border border-transparent hover:bg-primary/20 hover:border-primary hover:-translate-y-[3px] skill-badge"
            ><i class="text-[1.1rem] fa-solid fa-layer-group"></i> Ant Design</span
          >
        </div>
      </div>
      <div
        class="bg-white/10 backdrop-blur-[10px] p-6 rounded-[15px] border border-white/20 skill-category"
      >
        <h3
          class="font-['Sora',sans-serif] font-bold mb-[1.2rem] text-primary text-[1.25rem]"
        >
          Backend & APIs
        </h3>
